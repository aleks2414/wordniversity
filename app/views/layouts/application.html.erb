<!DOCTYPE html>
<html>
<head>
  <title>Wordniversity</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://use.fontawesome.com/8e56b09395.js"></script>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-104532430-1', 'auto');
  ga('send', 'pageview');

</script>
</head>
<body>

<% if alert %>
	<p class="alert"><%= alert %></p>
<% elsif notice %>
	<p class="notice"><%= notice %></p>
<% end %>

<header class="cd-auto-hide-header">
	<div class="logo"><a href="<%= root_path %>"><%= image_tag ("logo.png")%></a></div>

	<nav class="cd-primary-nav">
		<a href="#cd-navigation" class="nav-trigger">
			<span>
				<em aria-hidden="true"></em>
				Menu
			</span>
		</a> <!-- .nav-trigger -->

		<ul id="cd-navigation">

<ul id="cd-navigation">
      <% if user_signed_in? %>
      <li class="mini <%= 'active' if current_page?(edit_user_registration_path) %>">
        <a href="<%= edit_user_registration_path(@user) %>">Settings</a>
      </li>
      <li class="mini"> <a href="<%= destroy_user_session_path %>" data-method='delete'>
        Sign Out
      </a></li>

      <% if current_user %>
      <li class= mini "<%= 'active' if current_page?(new_university_path) %>"><%= link_to 'Add University', new_university_path, class: "sim"%></li>
      <% end %>
      <% else %>
      <li class="mini"><a href="<%= new_user_session_path %>"> Sign In </a></li>
      <li class="mini"><a href="<%= new_user_registration_path %>"> Sign Up </a></li>
      <% end %> 
    </li>
    </ul>

		</ul>
	</nav> <!-- .cd-primary-nav -->



</header> <!-- .cd-auto-hide-header -->

		<%= yield %>

<div id="footer">
	
</div>

</body>

</html>
